<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="18dp"
        android:layout_above="@id/layout_version">

        <ImageView
            android:layout_margin="24dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:src="@drawable/title_blue"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/btn_select_network"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#0066a6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="모델선택"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/btn_camera"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#0066a6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="카메라"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/btn_select_picture"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#0066a6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="갤러리"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/btn_report"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#0066a6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="리포트"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_version"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="v0.1"
        android:textSize="14sp" />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_gray"/>

</LinearLayout>

</RelativeLayout>